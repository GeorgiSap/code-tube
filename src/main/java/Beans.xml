<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd ">

	<!-- Initialization for data source -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />

		<!-- <property name="url" value="jdbc:mysql://localhost/codetube"/> -->
		<!-- <property name="username" value="root"/> -->
		<!-- <property name="password" value="password"/> -->
		<property name="url" value="jdbc:mysql://192.168.8.22:3306/hr" />
		<property name="username" value="ittstudent" />
		<property name="password" value="ittstudent-123" />
	</bean>

	<!-- Definition for UserJDBCTemplate bean -->
	<bean id="UserJDBCTemplate" class="model.user.UserJDBCTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="TagJDBCTemplate" class="model.tag.TagJDBCTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="VideoClipJDBCTemplate" class="model.videoclip.VideoClipJDBCTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="PlaylistJDBCTemplate" class="model.playlist.PlaylistJDBCTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="CommentJDBCTemplate" class="model.comment.CommentJDBCTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>



</beans>